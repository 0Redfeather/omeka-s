<?php
$form->prepare();
$this->htmlElement('body')->appendAttribute('class', 'resource-template');
echo $this->pageTitle(sprintf($this->translate('Resource Template: Review “%s”'), $import['o:label']));
?>
<?php echo $this->form()->openTag($form); ?>
<div id="page-actions">
    <button><?php echo $this->translate('Complete import'); ?></button>
</div>
<?php echo $this->formCollection($form, false); ?>
<?php echo $this->form()->closeTag(); ?>

<?php if ($import['o:resource_class']): ?>
<?php
$class = $import['o:resource_class'];
$hasVocab = isset($class['vocabulary_prefix']);
$hasClass = isset($class['o:id']);
if (!$hasVocab) {
    $title = sprintf('Missing vocabulary “%s” with namespace URI %s', $class['vocabulary_label'], $class['vocabulary_namespace_uri']);
    $classText = sprintf('<span title="%s">%s</span>', $this->escapeHtml($title), $class['label']);
} elseif (!$hasClass) {
    $title = sprintf('Missing property “%s” in vocabulary “%s” (%s:%s) ', $class['label'], $class['vocabulary_label'], $class['vocabulary_prefix'], $class['local_name']);
    $classText = sprintf('<span title="%s">%s</span>', $this->escapeHtml($title), $class['label']);
} else {
    $title = sprintf('%s:%s', $class['vocabulary_prefix'], $class['local_name']);
    $classText = sprintf('<span title="%s">%s</span>', $this->escapeHtml($title), $class['label']);
}
?>
<div class="class-row">
    <span class="class-label"><?php echo $this->translate('Class'); ?></span>
    <span class="class-value"><?php echo $classText; ?></span>
</div>
<?php endif; ?>

<table id="properties" class="tablesaw" data-tablesaw-mode="stack">
<thead>
    <tr>
        <th><?php echo $this->translate('Property'); ?></th>
        <th><?php echo $this->translate('Alternate Label'); ?></th>
        <th><?php echo $this->translate('Alternate Comment'); ?></th>
        <th><?php echo $this->translate('Required?'); ?></th>
    </tr>
</thead>
<tbody>
<?php foreach ($import['o:resource_template_property'] as $property): ?>
<?php
$hasVocab = isset($property['vocabulary_prefix']);
$hasProperty = isset($property['o:property']['o:id']);
?>
    <tr style="background-color:#<?php echo $hasProperty ? 'cdffcd;' : 'ffe6e6'; ?>">
        <td><?php echo $property['label']; ?></td>
        <td><?php echo $property['o:alternate_label']; ?></td>
        <td><?php echo $property['o:alternate_comment']; ?></td>
        <td><?php echo $property['o:is_required'] ? 'Yes' : 'No'; ?></td>
    </tr>
<?php
if (!$hasVocab || !$hasProperty) {
    if (!$hasVocab) {
        $errorText = sprintf('Missing vocabulary “%s” with namespace URI “%s”', $property['vocabulary_label'], $property['vocabulary_namespace_uri']);
    } elseif (!$hasProperty) {
        $errorText = sprintf('Missing property “%s” in vocabulary “%s” (%s:%s) ', $property['label'], $property['vocabulary_label'], $property['vocabulary_prefix'], $property['local_name']);
    } else {
        $errorText = sprintf('%s:%s', $property['vocabulary_prefix'], $property['local_name']);
    }
    echo '<tr><td colspan="4" style="background-color:#ffe6e6;">' . $errorText . '</td></tr>';
}
?>
<?php endforeach; ?>
</tbody>
</table>
