<?php
$escape = $this->plugin('escapeHtml');

$fragment = 'item-linked';
if ('Omeka\Api\Representation\ItemSetRepresentation' === get_class($objectResource)) {
    $fragment = 'item-set-linked';
}

$previousText = ($page <= 1)
    ? $this->translate('previous')
    : sprintf(
        '<a href="%s">%s</a>',
        $escape($this->url(null, [], ['query' => ['page' => $page - 1], 'fragment' => $fragment], true)),
        $this->translate('previous')
    );

$nextText = (($page * $perPage) >= $totalCount)
    ? $this->translate('next')
    : sprintf(
        '<a href="%s">%s</a>',
        $escape($this->url(null, [], ['query' => ['page' => $page + 1], 'fragment' => $fragment], true)),
        $this->translate('next')
    );
?>
<?php echo "$previousText | $nextText"; ?>
<table class="tablesaw" data-tablesaw-mode="stack">
    <thead>
        <tr>
            <th><?php echo $this->translate('Subject'); ?></th>
            <th><?php echo $this->translate('Predicate'); ?></th>
            <th><?php echo $this->translate('Object'); ?></th>
        </tr>
    </thead>
    <tbody>
        <?php if ($subjectValues): ?>
        <?php foreach ($subjectValues as $value): ?>
        <?php
        $resource = $value->resource();
        $property = $value->property();
        ?>
        <tr>
            <td><?php echo $resource->link($resource->displayTitle()); ?></td>
            <td><?php echo $escape($property->label()); ?></td>
            <td><?php echo $this->translate('This'); ?></td>
        </tr>
        <?php endforeach; ?>
        <?php endif; ?>
    </tbody>
</table>
<?php echo "$previousText | $nextText"; ?>
