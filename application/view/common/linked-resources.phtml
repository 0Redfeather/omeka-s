<?php
$escape = $this->plugin('escapeHtml');
$offsetPrevious = 0 > ($offset - $limit) ? null : $offset - $limit;
$offsetNext = $limit > count($subjectValues) ? null : $offset + $limit;
$previousText = (null === $offsetPrevious)
    ? $this->translate('previous')
    : sprintf(
        '<a href="%s">%s</a>',
        $escape($this->url(null, [], ['query' => ['offset' => $offsetPrevious], 'fragment' => 'item-linked'], true)),
        $this->translate('previous')
    );
$nextText = (null === $offsetNext)
    ? $this->translate('next')
    : sprintf(
        '<a href="%s">%s</a>',
        $escape($this->url(null, [], ['query' => ['offset' => $offsetNext], 'fragment' => 'item-linked'], true)),
        $this->translate('next')
    );
echo "$previousText | $nextText";
?>
<table class="tablesaw" data-tablesaw-mode="stack">
    <thead>
        <tr>
            <th><?php echo $this->translate('Subject'); ?></th>
            <th><?php echo $this->translate('Predicate'); ?></th>
            <th><?php echo $this->translate('Object'); ?></th>
        </tr>
    </thead>
    <tbody>
        <?php if ($subjectValues): ?>
        <?php foreach ($subjectValues as $value): ?>
        <?php
        $resource = $value->resource();
        $property = $value->property();
        ?>
        <tr>
            <td><?php echo $resource->link($resource->displayTitle()); ?></td>
            <td><?php echo $escape($property->label()); ?></td>
            <td><?php echo $this->translate('This'); ?></td>
        </tr>
        <?php endforeach; ?>
        <?php endif; ?>
    </tbody>
</table>
<?php echo "$previousText | $nextText"; ?>
