<?php
$this->htmlElement('body')->appendAttribute('class', 'resource-templates browse');
$escape = $this->plugin('escapeHtml');
$escapeAttr = $this->plugin('escapeHtmlAttr');
?>

<h1><?php echo $escape($this->translate('Resource Templates')); ?></h1>

<div id="page-actions">
    <a href="<?php echo $escapeAttr($this->url(null, array('action' => 'add'), true)); ?>" class="button">Add new resource template</a>
</div>

<?php if (count($resourceTemplates)): ?>

<?php echo $this->pagination(); ?>

<table>
    <thead>
        <tr>
            <th><?php echo $this->sortLink($this->translate('Label'), 'label'); ?></th>
        </tr>
    </thead>
    <tbody>
        <?php foreach ($resourceTemplates as $resourceTemplate): ?>
        <tr>
            <td>
                <span class="resource-name">
                    <?php echo $resourceTemplate->link($resourceTemplate->label()); ?>
                </span>
                <ul class="actions">
                    <li><?php echo $resourceTemplate->link('', 'edit', array(
                        'class' => 'o-icon-edit',
                        'aria-label' => $this->translate('Edit'),
                        'title' => $this->translate('Edit'),
                    )); ?></li>
                 </ul>
            </td>
        </tr>
        <?php endforeach; ?>
    </tbody>
</table>

<?php else: ?>

<div class="no-resources">
    <p><?php echo $escape($this->translate('Omeka could not find any resource templates.')); ?></p>
    <a href="<?php echo $escapeAttr($this->url(null, array('action' => 'add'), true)); ?>" class="button"><?php echo $escape($this->translate('Create your first resource template')); ?></a>
</div>

<?php endif; ?>

