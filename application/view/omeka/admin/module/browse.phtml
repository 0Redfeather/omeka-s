<?php
$this->htmlElement('body')->appendAttribute('class', 'modules browse');
$escape = $this->plugin('escapeHtml');
$escapeAttr = $this->plugin('escapeHtmlAttr');
?>

<h1>Modules</h1>

<form method="get" class="state-filter">
    <select name="state">
        <option value="">All Modules</option>
        <?php foreach ($states as $value => $option): ?>
        <option value="<?php echo $escapeAttr($value); ?>"<?php if ($value == $state): echo ' selected'; endif; ?>><?php echo $escape($option); ?></option>
        <?php endforeach; ?>
    </select>
</form>
<script>
$(".state-filter select").change(function() {
    $(this).closest('form').submit();
});
</script>

<?php if ($modules): ?> 
<table id="modules">
    <thead>
        <th>Module</th>
        <th>Status</th>
    </thead>
    <tbody>
        <?php foreach ($modules as $id => $module): ?>
        <tr>
            <td>
                <span class="module-name"><?php echo $this->hyperlink($module->getName(), $module->getIni('module_link')); ?></span>
                version <span class="module-version"><?php echo $module->getIni('version'); ?></span>
                <?php if ($author = $module->getIni('author')): ?>
                by <span class="module-author"><?php echo $this->hyperlink($author, $module->getIni('author_link')); ?></span>
                <?php endif; ?>

                <ul class="actions">
                    <?php if ('not_installed' == $module->getState()): ?>
                    <!-- install control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'install')), true),
                        array('class' => 'o-icon-install', 'title' => 'Install', 'aria-label' => 'Install module')
                    ); ?></li>
                    <?php endif; ?>

                    <?php if ('active' == $module->getState() && $module->isConfigurable()): ?>
                    <!-- configure control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'configure')), true),
                        array('class' => 'o-icon-configure', 'title' => 'Configure', 'aria-label' => 'Configure module')
                    ); ?></li>
                    <?php endif; ?>

                    <?php if ('active' == $module->getState()): ?>
                    <!-- deactivate control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'deactivate')), true),
                        array('class' => 'o-icon-deactivate', 'title' => 'Deactivate', 'aria-label' => 'Deactivate module')
                    ); ?></li>
                    <?php endif; ?>

                    <?php if ('not_active' == $module->getState()): ?>
                    <!-- activate control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'activate')), true),
                        array('class' => 'o-icon-activate', 'title' => 'Activate', 'aria-label' => 'Activate module')
                    ); ?></li>
                    <?php endif; ?>

                    <?php if (in_array($module->getState(), array('active', 'not_active'))): ?>
                    <!-- uninstall control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'uninstall')), true),
                        array('class' => 'o-icon-uninstall', 'title' => 'Uninstall', 'aria-label' => 'Uninstall module')
                    ); ?></li>
                    <?php endif; ?>

                    <?php if ('needs_upgrade' == $module->getState()): ?>
                    <!-- upgrade control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'upgrade')), true),
                        array('class' => 'o-icon-upgrade', 'title' => 'Upgrade', 'aria-label' => 'Upgrade module')
                    ); ?></li>
                    <?php endif; ?>

                    <!-- more control -->
                    <li><a href="#" class="o-icon-more" title="More details" aria-label="More details"></a></li>
                </ul>
            </td>
            <td><?php echo $escape($states[$module->getState()]); ?></td>
        </tr>
        <?php endforeach; ?>
    </tbody>
</table>

<?php else: ?>

<div class="no-resources">
    <p><?php echo $escape($this->translate('Omeka could not find any modules.')); ?></p>
</div>

<?php endif; ?>
