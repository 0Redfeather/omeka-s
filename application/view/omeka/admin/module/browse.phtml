<?php
$this->htmlElement('body')->appendAttribute('class', 'modules browse');
$escape = $this->plugin('escapeHtml');
$escapeAttr = $this->plugin('escapeHtmlAttr');
?>

<h1><?php echo $escape($this->translate('Modules')); ?></h1>

<form method="get" class="state-filter">
    <select name="state">
        <option value=""><?php echo $escape($this->translate('All Modules')); ?></option>
        <?php foreach ($states as $value => $option): ?>
        <option value="<?php echo $escapeAttr($value); ?>"<?php if ($value == $state): echo ' selected'; endif; ?>><?php echo $escape($option); ?></option>
        <?php endforeach; ?>
    </select>
</form>
<script>
$(".state-filter select").change(function() {
    $(this).closest('form').submit();
});
</script>

<?php if ($modules): ?>

<form method="post">

<div id="page-actions">
    <?php if ('active' == $state): ?>
    <button><?php echo $this->escapeHtml($this->translate('Deactivate Selected')); ?></button>
    <?php elseif ('not_active' == $state): ?>
    <button><?php echo $this->escapeHtml($this->translate('Activate Selected')); ?></button>
    <?php endif; ?>
</div>

<table id="modules">
    <thead>
        <?php if ('active' == $state || 'not_active' == $state): ?>
        <td></td>
        <?php endif; ?>
        <th><?php echo $escape($this->translate('Module')); ?></th>
        <th><?php echo $escape($this->translate('Status')); ?></th>
    </thead>
    <tbody>
        <?php foreach ($modules as $id => $module): ?>
        <tr>
            <?php if ('active' == $state): ?>
            <td><input type="checkbox" id="<?php echo $escapeAttr('row-' . $id); ?>" name="deactivate[]" value="<?php echo $escapeAttr($id); ?>"><label class="screen-reader-text" for="<?php echo $escapeAttr('row-' . $id); ?>">Select row</label></td>
            <?php elseif ('not_active' == $state): ?>
            <td><input type="checkbox" id="<?php echo $escapeAttr('row-' . $id); ?>" name="activate[]" value="<?php echo $escapeAttr($id); ?>"><label class="screen-reader-text" for="<?php echo $escapeAttr('row-' . $id); ?>">Select row</label></td>
            <?php endif; ?>
            <td>
                <span class="module-name"><?php echo $this->hyperlink($module->getName(), $module->getIni('module_link')); ?></span>
                <span class="module-version"><?php echo $this->translate(sprintf('version %s', $module->getIni('version') ?: $module->getDb('version'))); ?></span>
                <?php if ($author = $module->getIni('author')): ?>
                <span class="module-author"><?php echo $this->translate(sprintf('by %s', $this->hyperlink($author, $module->getIni('author_link')))); ?></span>
                <?php endif; ?>

                <ul class="actions">
                    <?php if ('not_installed' == $module->getState()): ?>
                    <!-- install control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'install')), true),
                        array('class' => 'o-icon-install', 'title' => $this->translate('Install'), 'aria-label' => $this->translate('Install module'))
                    ); ?></li>
                    <?php endif; ?>

                    <?php if ('active' == $module->getState() && $module->isConfigurable()): ?>
                    <!-- configure control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'configure')), true),
                        array('class' => 'o-icon-configure', 'title' => $this->translate('Configure'), 'aria-label' => $this->translate('Configure module'))
                    ); ?></li>
                    <?php endif; ?>

                    <?php if ('active' == $module->getState()): ?>
                    <!-- deactivate control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'deactivate')), true),
                        array('class' => 'o-icon-deactivate', 'title' => $this->translate('Deactivate'), 'aria-label' => $this->translate('Deactivate module'))
                    ); ?></li>
                    <?php endif; ?>

                    <?php if ('not_active' == $module->getState()): ?>
                    <!-- activate control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'activate')), true),
                        array('class' => 'o-icon-activate', 'title' => $this->translate('Activate'), 'aria-label' => $this->translate('Activate module'))
                    ); ?></li>
                    <?php endif; ?>

                    <?php if (in_array($module->getState(), array('active', 'not_active'))): ?>
                    <!-- uninstall control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'uninstall')), true),
                        array('class' => 'o-icon-uninstall', 'title' => $this->translate('Uninstall'), 'aria-label' => $this->translate('Uninstall module'))
                    ); ?></li>
                    <?php endif; ?>

                    <?php if ('needs_upgrade' == $module->getState()): ?>
                    <!-- upgrade control -->
                    <li><?php echo $this->hyperlink('',
                        $this->url(null, array(), array('query' => array('id' => $module->getId(), 'action' => 'upgrade')), true),
                        array('class' => 'o-icon-upgrade', 'title' => $this->translate('Upgrade'), 'aria-label' => $this->translate('Upgrade module'))
                    ); ?></li>
                    <?php endif; ?>

                    <!-- more control -->
                    <li><a href="#" class="o-icon-more" title="More details" aria-label="More details"></a></li>
                </ul>
            </td>
            <td><?php echo $escape($states[$module->getState()]); ?></td>
        </tr>
        <?php endforeach; ?>
    </tbody>
</table>

</form>

<?php else: ?>

<div class="no-resources">
    <p><?php echo $escape($this->translate('Omeka could not find any modules.')); ?></p>
</div>

<?php endif; ?>
