<?php
$escape = $this->plugin('escapeHtml');
$escapeAttr = $this->plugin('escapeHtmlAttr');
$title = sprintf($this->translate('Item: “%s”'), $item->displayTitle());
$this->headTitle($title);
$this->htmlElement('body')->appendAttribute('class', 'items show sidebar-open');
?>
<h1><?php echo $escape($title); ?></h1>
<div id="page-actions">
    <?php if ($item->userIsAllowed('update')): ?>
    <?php echo $item->link($this->translate('Edit item'), 'edit', array('class' => 'button')); ?>
    <?php endif; ?>
</div>

<nav class="section-nav">
    <ul>
        <li class="active"><a href="#item-metadata"><?php echo $this->translate('Metadata'); ?></a></li>
        <li><a href="#item-linked"><?php echo $this->translate('Linked Resources'); ?></a></li>
    </ul>
</nav>

<div id="item-metadata" class="active section sidebar-open">    
    <?php if ( $item->resourceClass()): ?>
        <div class="property">
            <h4><?php echo $this->translate('Class'); ?></h4>
            <div class="value"><?php echo $escape($item->resourceClass()->label()); ?></div>
        </div>
    <?php endif; ?>
    <?php echo $item->displayValues(); ?>
</div>

<div id="item-linked" class="section">
    <?php $subjects = $item->subjectValues(); ?>
    <?php $objects = $item->objectValues(); ?>
    <?php if ( $subjects || $objects ): ?>
        <?php echo $item->displayLinkedResources(); ?>
    <?php else: ?>
        <div class="no-resources">
            <p><?php echo $this->translate('There are no linked resources for this item.'); ?></p>
        </div>
    <?php endif; ?>
</div>


<div class="sidebar active">
    <?php if ($primaryMedia = $item->primaryMedia()): ?>
    <img 
        src="<?php echo $escapeAttr($primaryMedia->thumbnailUrl('square')); ?>" 
        title="<?php echo $escapeAttr($primaryMedia->displayTitle()); ?>" 
        alt="<?php echo $escapeAttr($primaryMedia->mediaType()); ?> thumbnail"
    >
    <?php endif; ?>
    <?php $itemsets = $item->itemSets(); ?>
    <?php if (count($itemsets) > 0): ?>
    <div class="property">
        <h4><?php echo $this->translate('Item Sets'); ?></h4>
        <?php foreach ($itemsets as $itemset): ?>
        <div class="value item-sets"><?php echo $itemset->link($itemset->displayTitle()); ?></div>
        <?php endforeach; ?>
    </div>
    <?php endif; ?>
    <div class="property">
        <h4><?php echo $this->translate('Date Created'); ?></h4>
        <div class="value"><?php echo $escape($this->i18n()->dateFormat($item->created())); ?></div>
    </div>
    <div class="property">
        <h4><?php echo $this->translate('Owner'); ?></h4>
        <div class="value"><?php echo $escape($item->owner()->name()); ?></div>
    </div>
    <div class="property">
        <h4><?php echo $this->translate('Visibility'); ?></h4>
        <div class="value"><?php echo ($item->isPublic()) ? $escapeAttr($this->translate('Public')) : $escapeAttr($this->translate('Private')); ?></div>
    </div>
    <?php if ($item->media()): ?>
    <div class="property">
        <h4><?php echo $this->translate('Media'); ?></h4>
        <?php foreach ($item->media() as $media): ?>
        <div class="value">
            <a href="<?php echo $media->url(); ?>">
                <img 
                    src="<?php echo $escapeAttr($media->thumbnailUrl('square')); ?>"
                title="<?php echo $escapeAttr($media->displayTitle()); ?>" 
                alt="<?php echo $escapeAttr($media->mediaType()); ?> thumbnail"
                >
                <span class="file-name"><?php echo $escape($media->displayTitle()); ?>
            </a>
        </div>
        <?php endforeach; ?>
    </div>
    <?php endif; ?>
</div>
<?php $this->trigger('view.show.after'); ?>
