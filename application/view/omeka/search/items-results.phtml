<?php
$this->htmlElement('body')->appendAttribute('class', 'items browse');
?>

<?php echo $this->pageTitle($this->translate('Items')); ?>

<div class="browse-controls">
    <?php echo $this->pagination(); ?>
    <?php echo $this->hyperlink($this->translate('Advanced search'), $this->url(null, ['action' => 'index'], ['query' => $this->params()->fromQuery()], true), ['class' => 'advanced-search']); ?>
</div>

<ul>
    <?php foreach ($items as $item): ?>
    <li><?php echo sprintf(
        '%s<span class="resource-name">%s</span>',
        $this->thumbnail($item, 'square'),
        $this->escapeHtml($item->displayTitle())
    ); ?></li>
    <?php $sites = $item->sites(); ?>
    <?php if ($sites): ?>
    <ul>
        <?php foreach ($sites as $site): ?>
        <li><?php echo $this->hyperlink($site->title(), $item->siteUrl($site->slug())); ?></li>
        <?php endforeach; ?>
    </ul>
    <?php endif; ?>
    <?php endforeach; ?>
</ul>

<div class="browse-controls">
    <?php echo $this->pagination(); ?>
</div>
